package taketrans;

public class Person {
	String name;	// 이름
	int age;		// 나이
	int money;		// 가진 돈
	
	public Person(String name, int money)
	{
		this.name = name;
		this.money = money;
	}
	
	// 버스를 타다
	
	
	// 정보 출력
	public void showInfo()
	{
		System.out.println(name + "님의 남은 돈은 " + money + "입니다.");
	}
}
